<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>

<body>
  <div class="modal">
    <div class="modal__container">
      <div class="modal__featured">
        <button type="button" class="button--transparent button--close">
          <svg class="nc-icon glyph" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
            x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32">
            <g>
              <path fill="#ffffff"
                d="M1.293,15.293L11,5.586L12.414,7l-8,8H31v2H4.414l8,8L11,26.414l-9.707-9.707 C0.902,16.316,0.902,15.684,1.293,15.293z">
              </path>
            </g>
          </svg>
          <span class="visuallyhidden">Return to previous page</span>
        </button>
        <div class="modal__circle"></div>
      </div>
      <div class="modal__content">
        <h2>Update Author</h2>

        {{ form_start(form, {'attr': {'class': 'form-list'}}) }}
        <ul class="form-list">
          <li class="form-list__row">
            {{ form_row(form.username, {'label': 'Username', 'attr': {'class': 'form-control'}}) }}
          </li>
          <li class="form-list__row">
            {{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
          </li>

          <li>
            <button type="submit" class="button">Update</button>
          </li>
        </ul>
        {{ form_end(form) }}

      </div> <!-- END: .modal__content -->
    </div> <!-- END: .modal__container -->
  </div> <!-- END: .modal -->
</body>

</html>
